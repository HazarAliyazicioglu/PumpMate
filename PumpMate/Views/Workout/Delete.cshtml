@model PumpMate.Models.Workout

@{
    ViewData["Title"] = "Antrenman Sil";
}

<div class="page-header">
    <div class="container">
        <h1>🗑️ Antrenman Sil</h1>
        <p>Bu işlem geri alınamaz, lütfen dikkatli olun</p>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3>⚠️ Dikkat!</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        ⚠️
                        <strong>Bu antrenmanı silmek istediğinizden emin misiniz?</strong>
                        <p class="mb-0 mt-2">Bu işlem geri alınamaz ve antrenman verileriniz kalıcı olarak silinecektir.</p>
                    </div>

                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>ℹ️ Silinecek Antrenman Bilgileri</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="text-center p-3">
                                        <h6>Tarih</h6>
                                        <p class="mb-0">@Model.Date.ToShortDateString()</p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="text-center p-3">
                                        <h6>Tür</h6>
                                        <p class="mb-0">@Model.WorkoutType</p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="text-center p-3">
                                        <h6>Notlar</h6>
                                        <p class="mb-0">@(string.IsNullOrEmpty(Model.Notes) ? "Not yok" : Model.Notes)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="text-center">
                            <button type="submit" class="btn btn-danger btn-lg me-3">
                                🗑️ Evet, Sil
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                ⬅️ İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Alternatif Öneriler -->
            <div class="card mt-4">
                <div class="card-header">
                    <h4>💡 Alternatif Öneriler</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="d-flex align-items-start mb-3">
                                <div>
                                    <strong>✏️ Düzenleme:</strong>
                                    <p class="small text-muted mb-0">Antrenmanı silmek yerine düzenleyebilirsiniz.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-start mb-3">
                                <div>
                                    <strong>📦 Arşivleme:</strong>
                                    <p class="small text-muted mb-0">Gelecekte referans için saklayabilirsiniz.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-center mt-3">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                            ✏️ Düzenle
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
