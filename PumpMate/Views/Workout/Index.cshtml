@model List<PumpMate.Models.WorkoutIndexViewModel>

@{
    ViewData["Title"] = "Antrenman Geçmişi";
}

<style>
    .exercise-list {
        max-height: 200px;
        overflow-y: auto;
    }
    
    .exercise-item {
        padding: 8px;
        border-radius: 6px;
        background-color: #f8f9fa;
        border-left: 3px solid #007bff;
    }
    
    .exercise-item:hover {
        background-color: #e9ecef;
    }
    
    .table-responsive {
        overflow-x: auto;
    }
    
    .table th {
        white-space: nowrap;
        min-width: 120px;
    }
    
    .table td {
        vertical-align: top;
        padding: 12px 8px;
    }
</style>



<div class="container">
    <!-- Yeni Antrenman Ekle Butonu - Her zaman görünür -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center py-4">
                <h2 class="mb-0"><i class="fas fa-dumbbell me-2"></i>Antrenmanlarım</h2>
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus me-2"></i>Yeni Antrenman Ekle
                </a>
            </div>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-md-4">
            <div class="stats-card">
                <i class="fas fa-dumbbell fa-3x text-primary mb-3"></i>
                <div class="stats-number">@Model.Count</div>
                <div class="stats-label">Toplam Antrenman</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stats-card">
                <i class="fas fa-calendar-check fa-3x text-success mb-3"></i>
                <div class="stats-number">@Model.Count(w => w.Date >= DateTime.Today.AddDays(-30))</div>
                <div class="stats-label">Bu Ay</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stats-card">
                <i class="fas fa-fire fa-3x text-danger mb-3"></i>
                <div class="stats-number">@Model.Count(w => w.Date >= DateTime.Today.AddDays(-7))</div>
                <div class="stats-label">Günlük Streak</div>
            </div>
        </div>
    </div>
    @if (Model.Count == 0)
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-dumbbell fa-5x text-muted mb-4"></i>
                <h3>Henüz hiç antrenman eklenmemiş</h3>
                <p class="text-muted mb-4">İlk antrenmanınızı ekleyerek fitness yolculuğunuza başlayın!</p>
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus me-2"></i>İlk Antrenmanımı Ekle
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                <h3><i class="fas fa-list me-2"></i>Antrenman Listesi</h3>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th><i class="fas fa-calendar me-2"></i>Tarih</th>
                                <th><i class="fas fa-dumbbell me-2"></i>Tür</th>
                                <th><i class="fas fa-dumbbell me-2"></i>Egzersizler</th>
                                <th><i class="fas fa-sticky-note me-2"></i>Notlar</th>
                                <th><i class="fas fa-cogs me-2"></i>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var workout in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-calendar-day text-primary me-2"></i>
                                            <strong>@workout.Date.ToShortDateString()</strong>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-@(workout.WorkoutType == "Gym" ? "primary" : "success") rounded-pill">
                                            <i class="fas fa-@(workout.WorkoutType == "Gym" ? "building" : "home") me-1"></i>
                                            @workout.WorkoutType
                                        </span>
                                    </td>
                                    <td>
                                        @if (workout.WorkoutDetails.Any())
                                        {
                                            <div class="exercise-list">
                                                @foreach (var detail in workout.WorkoutDetails)
                                                {
                                                    <div class="exercise-item mb-2">
                                                        <div class="d-flex justify-content-between align-items-center">
                                                            <div>
                                                                <strong class="text-primary">@detail.ExerciseName</strong>
                                                                @if (!string.IsNullOrEmpty(detail.ExerciseCategory))
                                                                {
                                                                    <small class="text-muted ms-2">(@detail.ExerciseCategory)</small>
                                                                }
                                                            </div>
                                                            <div class="text-end">
                                                                <span class="badge bg-info me-1">@detail.SetCount set</span>
                                                                <span class="badge bg-warning me-1">@detail.Reps tekrar</span>
                                                                @if (detail.Weight.HasValue)
                                                                {
                                                                    <span class="badge bg-secondary">@detail.Weight kg</span>
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted"><em>Egzersiz eklenmemiş</em></span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(workout.Notes))
                                        {
                                            <span class="text-muted">@workout.Notes</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted"><em>Not eklenmemiş</em></span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@workout.Id" title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@workout.Id" title="Sil">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- İstatistikler -->
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="stats-card">
                    <i class="fas fa-calendar-check fa-2x text-success mb-2"></i>
                    <div class="stats-number">@Model.Count(w => w.Date >= DateTime.Today.AddDays(-30))</div>
                    <div class="stats-label">Bu Ay</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card">
                    <i class="fas fa-building fa-2x text-primary mb-2"></i>
                    <div class="stats-number">@Model.Count(w => w.WorkoutType == "Gym")</div>
                    <div class="stats-label">Gym Antrenmanı</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card">
                    <i class="fas fa-home fa-2x text-success mb-2"></i>
                    <div class="stats-number">@Model.Count(w => w.WorkoutType == "Home")</div>
                    <div class="stats-label">Ev Antrenmanı</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card">
                    <i class="fas fa-fire fa-2x text-danger mb-2"></i>
                    <div class="stats-number">@Model.Count(w => w.Date >= DateTime.Today.AddDays(-7))</div>
                    <div class="stats-label">Bu Hafta</div>
                </div>
            </div>
        </div>
    }
</div>
