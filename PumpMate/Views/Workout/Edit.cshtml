@model PumpMate.Models.Workout

@{
    ViewData["Title"] = "Antrenman Düzenle";
}

<div class="page-header">
    <div class="container">
        <h1>✏️ Antrenman Düzenle</h1>
        <p>Antrenman bilgilerinizi güncelleyin</p>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h3>💪 Antrenman Bilgileri</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                                            <label asp-for="Date" class="form-label">
                            📅 Tarih
                        </label>
                                    <input asp-for="Date" class="form-control" type="date" />
                                    <span asp-validation-for="Date" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                                            <label asp-for="WorkoutType" class="form-label">
                            💪 Antrenman Türü
                        </label>
                                    <select asp-for="WorkoutType" class="form-control">
                                        <option value="Gym">Gym</option>
                                        <option value="Home">Ev</option>
                                    </select>
                                    <span asp-validation-for="WorkoutType" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                                                    <label asp-for="Notes" class="form-label">
                            📝 Notlar (İsteğe bağlı)
                        </label>
                            <textarea asp-for="Notes" class="form-control" rows="4" 
                                      placeholder="Antrenmanınız hakkında notlar ekleyin..."></textarea>
                        </div>

                        <div class="form-group text-center mt-4">
                                                    <button type="submit" class="btn btn-primary btn-lg me-3">
                            💾 Güncelle
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            ⬅️ İptal
                        </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Mevcut Bilgiler -->
            <div class="card mt-4">
                <div class="card-header">
                    <h4>ℹ️ Mevcut Antrenman Bilgileri</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="text-center p-3">
                                <h6>Tarih</h6>
                                <p class="mb-0">@Model.Date.ToShortDateString()</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center p-3">
                                <h6>Tür</h6>
                                <p class="mb-0">@Model.WorkoutType</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center p-3">
                                <h6>Notlar</h6>
                                <p class="mb-0">@(string.IsNullOrEmpty(Model.Notes) ? "Not yok" : Model.Notes)</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
