@{
    ViewData["Title"] = "Şifreni Unuttun";
}

<div class="container mt-5">
    <h2>Şifreni Unuttun</h2>
    <form method="post">
        <div class="form-group">
            <label>Kullanıcı adınızı girin:</label>
            <input type="text" name="username" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary mt-2">Göster</button>
    </form>

    <a href="@Url.Action("Login", "Auth")" class="btn btn-secondary mt-2">🏠 Giriş Yap</a>

    @if (ViewBag.Password != null)
    {
        <div class="alert alert-success mt-3">
            Şifreniz: <strong>@ViewBag.Password</strong>
        </div>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger mt-3">@ViewBag.Error</div>
    }
</div>
